# Server Configuration
# Backend API port - you can change this to any available port (e.g., 4001, 5001, 8080)
PORT=4001
NODE_ENV=development

# Frontend Configuration  
# Frontend port - you can change this to any available port (e.g., 4000, 5000, 8000)
FRONTEND_PORT=4000

# Frontend URL - should match your backend port
NEXT_PUBLIC_API_URL=http://localhost:4001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AI Services (Optional - for future integration)
# OPENAI_API_KEY=your_openai_key_here
# REPLICATE_API_KEY=your_replicate_key_here
# ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Cloud Storage (Optional)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# CORS Configuration - should match your frontend port
ALLOWED_ORIGINS=http://localhost:4000

# Celebrity Voices Feature (Legal compliance required)
# FORCE_ENABLE_CELEB_VOICES=false

# Database (Optional - for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/offers_db
